@model Category


<form>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3 row"> 
            <label class="mb-1">Category Name</label>
            <input type="text" class="form-control bg-white text-black" />
        </div>
        <div class="mb-3 row">
            <label class="mb-1">Display Order</label>
            <input type="text" class="form-control bg-white text-black" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class=" btn btn-primary" style="width:100%">Create</button>
            </div>
            <div class="col-6 col-md-3">
                 <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:100%">
            Return List
        </a>
            </div>
        </div>
    </div>
</form>